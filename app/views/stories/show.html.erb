<h1 class="story_show_title"><%= @story.title %></h1>

<div class="story">
    <p><%= @story.content %> 🖋author: <%= @story.user.username %></p>

    <% @story.contributions.each do |contribution| %>
    <p style="color: green";><%= contribution.contributor_content %> ✏️contributor: <%= contribution.user.username %></p>
    <% end %>
</div>

<br>
<br>
<br>
<%= button_to "Gee, I wanna add to this story", new_contribution_path(@story), method: :get %>


<p><%= link_to "Back to all stories", stories_path %></p>

<p><%= button_to "Take me back to #{@current_user.username}'s page", user_path(@current_user), method: :get %></p>

<% if @story.user == @current_user %>
    <p><%= button_to "Delete story", story_path(@story), method: :delete %></p>
<% end %>