<div class="new_story_container">
    <h1 class="new_story_title">Create a new GeeWord story</h1>
    <div class="new_story_form">
        <% if flash[:errors] %>
            <% flash[:errors].each do |error|%>
            <p style="color:red";><%= error %></p>
            <% end %>
        <% end %>
        <%= form_for @story do |f|%>
        <%= f.label :title %><br>
        <%= f.text_field :title %><br><br>
        <%= f.label :content %><br>
        <%= f.text_area :content, size: "50x10" %><br><br>
        <%= f.hidden_field :user_id, value: @current_user.id %>
        <%= f.submit 'New GeeStory', :class => 'submit_button' %>
        <% end %>
    </div>
</div>