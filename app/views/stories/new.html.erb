<h1>Create a new GeeWord story</h1>
<% if flash[:errors] %>
    <% flash[:errors].each do |error|%>
    <p style="color:red";><%= error %></p>
    <% end %>
<% end %>
<%= form_for @story do |f|%>
<%= f.label :title %>
<%= f.text_field :title %>
<%= f.label :content %>
<%= f.text_field :content %>
<%= f.hidden_field :user_id, value: @current_user.id %>
<%= f.submit %>
<% end %>