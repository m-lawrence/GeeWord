<h1>Login Page</h1>
<br>
<% if flash[:errors] %>
    <p style="color: red"><strong><%= flash[:errors] %></strong></p>
    <% end %>
<%= form_for :session, url: 'login', html: {class: 'form-basic'} do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <%= f.label :password %>
    <%= f.text_field :password %>
    <%= f.submit "Gee, are you ready to write?" %>
    <% end %>

    <h1>Create a GeeWord Account!</h1>

<%= form_for @user do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <%= f.label :password %>
    <%= f.text_field :password %>
    <%= f.label :location %>
    <%= f.text_field :location %>
    <%= f.submit "Gee, are you ready to write?" %>
    <% end %>