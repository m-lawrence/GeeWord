<div class="login_redo_container">
    <br>
    <br>
    <h1 class="login_redo_title">Login</h1>
    <div class='login_redo'>
        <% if flash[:errors] %>
            <p style="color: red"><strong><%= flash[:errors] %></strong></p>
            <% end %>
        <%= form_for :session, url: 'login', html: {class: 'form-basic'} do |f| %>
            <%= f.label :username %>
            <%= f.text_field :username %><br><br>
            <%= f.label :password %>
            <%= f.text_field :password %><br><br>
            <%= f.submit "Gee, are you ready to write?" %>
            <% end %>
    </div>
</div>
